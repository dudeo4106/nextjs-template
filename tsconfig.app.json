{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    /* bundler mode */
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* next.js */
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],

    /* target */
    "paths": {
      "@/*": ["packages/app/src/*"]
    }
  },
  "include": ["packages/app/src/**/*.ts", "packages/app/src/**/*.tsx"]
}
