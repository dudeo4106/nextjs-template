{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    /* next.js */
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* target */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    /* generated */
    "incremental": false
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "public/mockServiceWorker.js"]
}
