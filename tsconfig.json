{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    /* bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* js */
    "allowJs": true,
    /* ignore libs */
    "skipLibCheck": true,
    /* path */
    "baseUrl": ".",
    "paths": {
      "mock/*": ["packages/mock/*"]
    }
  }
}
